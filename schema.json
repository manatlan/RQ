{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scenario Schema",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "RUN": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      },
      "required": ["RUN"],
      "additionalProperties": {
        "type": "object"
      }
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/definitions/step"
      }
    }
  ],
  "definitions": {
    "step": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/definitions/httpStep" },
        { "$ref": "#/definitions/callStep" },
        { "$ref": "#/definitions/setStep" }
      ],
      "properties": {
        "params": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "object" }
            }
          ]
        }
      }
    },
    "httpStep": {
      "type": "object",
      "properties": {
        "get": { "type": "string" },
        "post": { "type": "string" },
        "put": { "type": "string" },
        "patch": { "type": "string" },
        "delete": { "type": "string" },
        "head": { "type": "string" },
        "options": { "type": "string" },
        "doc": { "type": "string" },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "body": {},
        "tests": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "anyOf": [
        { "required": ["get"] },
        { "required": ["post"] },
        { "required": ["put"] },
        { "required": ["patch"] },
        { "required": ["delete"] },
        { "required": ["head"] },
        { "required": ["options"] }
      ]
    },
    "callStep": {
      "type": "object",
      "properties": {
        "call": { "type": "string" }
      },
      "required": ["call"]
    },
    "setStep": {
      "type": "object",
      "properties": {
        "set": { "type": "object" }
      },
      "required": ["set"]
    }
  }
}